<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.firabasefirstexperience">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/app_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <activity android:name="com.example.firabasefirstexperience.kotlin.activity.ResetPassActivity"
            android:parentActivityName="com.example.firabasefirstexperience.kotlin.activity.LoginActivity">
        </activity>

        <activity android:name="com.example.firabasefirstexperience.kotlin.activity.StartLoadingActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.firabasefirstexperience.kotlin.activity.DiffProfileActivity"
            android:parentActivityName="com.example.firabasefirstexperience.kotlin.activity.ChatActivity" />

        <activity
            android:name="com.example.firabasefirstexperience.kotlin.activity.SearchActivity"
            android:parentActivityName="com.example.firabasefirstexperience.kotlin.activity.ChatActivity" />

        <activity
            android:name="com.example.firabasefirstexperience.kotlin.activity.ChatActivity"
            android:parentActivityName="com.example.firabasefirstexperience.kotlin.activity.MainActivity" />

        <activity
            android:name="com.example.firabasefirstexperience.kotlin.activity.LoginActivity"
            android:parentActivityName="com.example.firabasefirstexperience.kotlin.activity.StartActivity" />

        <activity
            android:name="com.example.firabasefirstexperience.kotlin.activity.MainActivity"
            android:label="Sup Chat"
            android:parentActivityName="com.example.firabasefirstexperience.kotlin.activity.StartActivity" />

        <activity
            android:name="com.example.firabasefirstexperience.kotlin.activity.RegisterActivity"
            android:parentActivityName="com.example.firabasefirstexperience.kotlin.activity.StartActivity" />

        <activity android:name="com.example.firabasefirstexperience.kotlin.activity.StartActivity" />
        <activity android:name="com.example.firabasefirstexperience.kotlin.activity.ProfileActivity"/>
    </application>

</manifest>